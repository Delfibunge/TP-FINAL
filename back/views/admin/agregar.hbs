<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un producto</h4>
            <form class="formproductos" action="/admin/productos/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Precio" name="precio"></input>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="DescripciÃ³n" name="descripcion"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-bottom: 50px">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>