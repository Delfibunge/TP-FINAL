<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar productos</h4>
            <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{producto.id}}" name="id"> 
                <div class="mb-3 row">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" name="nombre" value="{{producto.nombre}}">
                </div>
                <div class="mb-3 row">
                    <label for="">Precio</label>
                    <input type="text" class="form-control" name="precio" value="{{producto.precio}}">
                </div>
                <div class="mb-3 row">
                    <label for="">Descripción</label>
                    <textarea class="form-control" name="descripcion">{{producto.descripcion}}</textarea>
                </div>
                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">¿Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{producto.img_id}}">
                    </p>
                </div> 
                <button type="submit" class="btn btn-primary" style="margin-bottom: 50px">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>